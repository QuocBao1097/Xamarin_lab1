<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Title="Basic Control"
             x:Class="lab01.basicControls">
        <StackLayout>
            
        <Grid VerticalOptions="Start">
            <Label Text="Basic Controls"
                   TextColor="gray"
                   FontAttributes="Bold"
                   FontSize="35"
                   HorizontalOptions="Center"
             ></Label>

            <Entry
                  Margin="20, 60, 20, 0"
                  Placeholder="Name"
                   Grid.Row="0"
             ></Entry>

            <Entry
                  Margin="20,60, 20, 0"
                  Placeholder="Email"
                  Grid.Row="1"
             ></Entry>

            <Entry
                  Margin="20, 60, 20, 0"
                  Placeholder="Phone Number"
                  Grid.Row="2"
             ></Entry>

            <Entry
                  Margin="20, 60, 20, 0"
                  Placeholder="Password"
                  Grid.Row="3"
             ></Entry>
   
        </Grid>

        <Editor 
            VerticalOptions="FillAndExpand"
            BackgroundColor="Black"
            TextColor="White"
            Margin="20"
            >
        </Editor>
        </StackLayout>

</ContentPage>